<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_bg"
    tools:context=".ViewContentActivity">

    <LinearLayout
        android:id="@+id/linearLayoutWebView"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <Button
            android:id="@+id/buttonDownload"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Download Content"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:background="@drawable/buttons"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            />
        <LinearLayout
            android:id="@+id/linearLayoutComment"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter A comment"
                android:background="@drawable/edit_text_inputs"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:lines="3"
                />
            <Button
                android:id="@+id/buttonComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Post Comment"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingHorizontal="16dp"
                android:background="@drawable/buttons"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/buttonLike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Like"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_baseline_thumb_up_24"
                    android:drawableTint="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/buttons"
                    android:padding="6dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    />
                <Button
                    android:id="@+id/buttonDislike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Dislike"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_baseline_thumb_down_24"
                    android:drawableTint="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/buttons"
                    android:padding="6dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    />

                <Button
                    android:id="@+id/buttonShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:text="Share"
                    android:drawableLeft="@drawable/ic_share"
                    android:drawableTint="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/buttons"
                    android:padding="6dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="12dp"
    app:cardElevation="3dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:text="Content Title"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="8dp"
            android:src="@drawable/ic_person"/>


        <TextView
            android:id="@+id/textViewDescription"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Description"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearLayoutPay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Mpesa Number"
                android:background="@drawable/edit_text_inputs"
                android:padding="10dp"
                android:inputType="number"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonDeny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginVertical="8dp"
                android:drawableTint="@color/white"
                android:text="Deny"
                android:drawableLeft="@drawable/ic_baseline_delete_forever_24"
                android:background="@drawable/buttons"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                />
            <Button
                android:id="@+id/buttonApprove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:drawableTint="@color/white"
                android:text="Approve"
                android:drawableLeft="@drawable/ic_baseline_approval_24"
                android:background="@drawable/buttons"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                />

        </LinearLayout>




    </LinearLayout>


</androidx.cardview.widget.CardView>